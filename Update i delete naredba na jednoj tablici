 PROMJENA PODATAKA

--select * from smjer;

-- ne izvoditi update bez where dijela update naredbe

update smjer set naziv='Web programiranje'
where sifra=1;


-- promjeni cijenu serviseru na 1200 EUR i upisninu na 50 EUR
update smjer set
cijena=1200,
upisnina=50
where sifra=3;

--select * from grupa;

update grupa set smjer=11 where sifra=1;


